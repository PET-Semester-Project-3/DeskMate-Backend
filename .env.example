# PostgreSQL Database Configuration
POSTGRES_USER=deskmate_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=deskmate
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Docker Exposed Ports
PG_EXPOSED_PORT=5432
